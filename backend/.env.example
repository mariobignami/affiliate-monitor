# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=affiliate_monitor
DB_USER=postgres
DB_PASSWORD=postgres123
DB_DIALECT=postgres

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# WhatsApp Configuration (future)
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER=

# Discord Configuration (future)
DISCORD_BOT_TOKEN=
DISCORD_CHANNEL_ID=

# Affiliate IDs
AMAZON_AFFILIATE_ID=your-amazon-affiliate-id
SHOPEE_AFFILIATE_ID=your-shopee-affiliate-id
MERCADOLIVRE_AFFILIATE_ID=your-mercadolivre-affiliate-id

# Scraping Configuration
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPER_DELAY_MS=2000
MAX_CONCURRENT_REQUESTS=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS
CORS_ORIGIN=http://localhost:3001
